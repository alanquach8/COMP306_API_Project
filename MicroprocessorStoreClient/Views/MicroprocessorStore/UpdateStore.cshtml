@model Store

@if(!string.IsNullOrWhiteSpace(ViewBag.Message))
{
    <h3>@ViewBag.Message</h3>
}

<h1>Update Form For Store ID = @Model.Id:</h1>

<form method="post" asp-controller="MicroprocessorStore" asp-action="UpdateStoreInfo">
    <input type="hidden" name="id" value="@Model.Id" />
    <div class="form-group">
        <label>Name:</label><input class="form-control" type="text" name="name" value="@Model.Name" />
    </div>
    <div class="form-group">
        <label>Address:</label><input class="form-control" type="text" name="address" value="@Model.Address" />
    </div>
    <button class="btn btn-primary" type="submit">Update</button>
    <a class="btn btn-secondary" asp-controller="MicroprocessorStore" asp-action="Stores">Cancel</a>
</form>