@model IEnumerable<Store>

<div class="heading-with-button">
    <h1>Stores</h1>
    <a class="btn btn-primary" asp-controller="MicroprocessorStore" asp-action="AddStore">Add A Store</a>
</div>
@if (Model.Count() > 0)
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Address</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (Store store in Model)
            {
                <tr>
                    <td>@store.Id</td>
                    <td>@store.Name</td>
                    <td>@store.Address</td>
                    <td>
                        <a class="btn btn-primary" asp-controller="MicroprocessorStore" asp-action="AvailabilitiesForStore" asp-route-id="@store.Id">Availabilities</a> | 
                        <a class="btn btn-warning" asp-controller="MicroprocessorStore" asp-action="UpdateStore" asp-route-id="@store.Id">Update</a> | 
                        <a class="btn btn-danger" asp-controller="MicroprocessorStore" asp-action="DeleteStore" asp-route-id="@store.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>There are currently no stores in the database</p>
}