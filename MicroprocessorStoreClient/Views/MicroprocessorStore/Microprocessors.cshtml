@model IEnumerable<Microprocessor>

<div class="heading-with-button">
    <h1>Microprocessors</h1>
    <a class="btn btn-primary" asp-controller="MicroprocessorStore" asp-action="AddMicroprocessor">Add A Microprocessor</a>
</div>
@if (Model.Count() > 0)
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Description</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (Microprocessor microprocessor in Model)
            {
                <tr>
                    <td>@microprocessor.Id</td>
                    <td>@microprocessor.Name</td>
                    <td>@microprocessor.Description</td>
                    <td>
                        <a class="btn btn-primary" asp-controller="MicroprocessorStore" asp-action="AvailabilitiesForMicroprocessor" asp-route-id="@microprocessor.Id">Availabilities</a> |
                        <a class="btn btn-warning" asp-controller="MicroprocessorStore" asp-action="UpdateMicroprocessor" asp-route-id="@microprocessor.Id">Update</a> |
                        <a class="btn btn-danger" asp-controller="MicroprocessorStore" asp-action="DeleteMicroprocessor" asp-route-id="@microprocessor.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>There are currently no microprocessors in the database</p>
}